{
  "manifest_version": 3,
  "name": "DRAFT Protocol",
  "description": "Intake governance for AI tool calls. Ensures AI understands what you want before it does anything.",
  "version": "0.1.0",
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "http://127.0.0.1:8420/*",
    "http://localhost:8420/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "DRAFT Protocol"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://copilot.microsoft.com/*",
        "https://chat.mistral.ai/*",
        "https://poe.com/*",
        "https://huggingface.co/chat/*",
        "https://labs.perplexity.ai/*",
        "https://www.perplexity.ai/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
